<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="comment-content" id="this_comment_<%= comment.id %>"></div>
        <p><%= comment.content %></p>
        <p><%= link_to 'Edit comment', edit_blog_comment_path(blog, comment), remote: true %></p>
        <p><%= link_to 'Delete comment', blog_comment_path(comment.blog_id, comment.id), method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></p>
      </li>
    <% end %>
  <% end %>
</ul>

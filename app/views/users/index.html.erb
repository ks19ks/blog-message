<h2>ユーザー</h2>
<% @users.each do |user| %>
  <% if user.id != current_user.id %>
    <div class="item">
      <%= link_to user.name, user %>
      <%= link_to 'Message', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post %>
    </div>
    <p>
      <%= render 'follow_form', user: user %>
    </p>
  <% end %>
<% end %>
